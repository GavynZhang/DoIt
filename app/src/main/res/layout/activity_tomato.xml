<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_y"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gavynzhang.doit.ui.activities.TomatoActivity">

    <TextView
        android:id="@+id/tomato_event_name"
        android:text="高数作业"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="34sp"
        android:textColor="@color/mint_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/prompt_text"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"/>

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/work_count_down_view"
        android:layout_below="@+id/tomato_event_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:timeTextSize="64sp"
        app:suffixGravity="center"
        app:suffixTextSize="64sp"
        app:timeTextColor="@color/md_teal_500"
        app:suffixTextColor="@color/md_teal_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/rest_count_down_view"
        android:layout_below="@+id/tomato_event_name"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:timeTextSize="64sp"
        app:suffixGravity="center"
        app:suffixTextSize="64sp"
        app:timeTextColor="@color/md_teal_300"
        app:suffixTextColor="@color/md_teal_300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/tomato_start"
        android:text="开始"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_bac"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
