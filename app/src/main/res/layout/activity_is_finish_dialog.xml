<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_y"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gavynzhang.doit.ui.activities.IsFinishDialogActivity">

    <TextView
        android:id="@+id/is_finish_dialog_title"
        android:textSize="17sp"
        android:textColor="@color/md_grey_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/finish_event_btn"
        android:text="已完成"
        android:textColor="@color/md_teal_400"
        android:layout_below="@+id/is_finish_dialog_title"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:background="@color/lucency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/unfinish_event_btn"
        android:text="未完成"
        android:textColor="@color/md_teal_400"
        android:layout_toRightOf="@+id/finish_event_btn"
        android:layout_below="@+id/is_finish_dialog_title"
        android:layout_marginTop="8dp"
        android:background="@color/lucency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
