<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_y"
    tools:context="com.gavynzhang.doit.ui.activities.TomatoBreakDialogActivity">

    <TextView
        android:id="@+id/tomato_break_dialog_title"
        android:text="你被什么事情打断了？"
        android:textColor="@color/md_grey_800"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/tomato_break_dialog_edit_text"
        android:layout_below="@+id/tomato_break_dialog_title"
        android:textColor="@color/md_teal_400"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tomato_break_dialog_cancel_btn"
        android:text="取消"
        android:textColor="@color/md_teal_400"
        android:textSize="14sp"
        android:background="@color/lucency"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_below="@+id/tomato_break_dialog_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tomato_break_dialog_save_btn"
        android:text="放弃番茄"
        android:textColor="@color/md_teal_400"
        android:textSize="14sp"
        android:background="@color/lucency"
        android:layout_toRightOf="@+id/tomato_break_dialog_cancel_btn"
        android:layout_below="@+id/tomato_break_dialog_edit_text"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>
