<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_y"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SignUpActivity">

    <include layout="@layout/toolbar"/>


    <RelativeLayout
        android:id="@+id/sign_up_input"
        android:layout_marginTop="28dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sign_up_icon"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="58dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/sign_up_username"
            android:layout_below="@+id/sign_up_icon"
            android:layout_marginTop="24dp"
            android:textColorHint="@color/md_grey_400"
            android:textColor="@color/md_grey_800"
            android:hint="@string/user_name"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/sign_up_user_email"
            android:hint="@string/user_email"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/sign_up_username"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/md_grey_400"
            android:textColor="@color/md_grey_800"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/sign_up_password"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="17sp"
            android:textColorHint="@color/md_grey_400"
            android:textColor="@color/md_grey_800"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/sign_up_user_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/sign_up_btn"
        android:text="@string/sign_up"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="19sp"
        android:textColor="@color/md_grey_100"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
