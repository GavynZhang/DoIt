<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_y"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gavynzhang.doit.ui.activities.EventRemindTimePriDialogActivity">

    <TextView
        android:id="@+id/dialog_title"
        android:text="添加提醒"
        android:textSize="19sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/md_grey_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/dialog_level_1_relative_btn"
        android:layout_below="@+id/dialog_title"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/level_1_text"
            android:background="@color/lucency"
            android:text="无提醒"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/mint_green"
            android:gravity="center_vertical"
            android:layout_width="280dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/level_1_check_img"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/dialog_line_1"
        android:layout_below="@+id/dialog_level_1_relative_btn"
        android:background="@color/md_grey_200"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/dialog_level_2_relative_btn"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_below="@+id/dialog_line_1"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/level_2_text"
            android:background="@color/lucency"
            android:text="事件发生时"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/md_grey_800"
            android:layout_width="280dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/level_2_check_img"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/dialog_line_2"
        android:layout_below="@+id/dialog_level_2_relative_btn"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:background="@color/md_grey_200"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/dialog_level_3_relative_btn"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_below="@+id/dialog_line_2"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/level_3_text"
            android:background="@color/lucency"
            android:text="提前10分钟"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/md_grey_800"
            android:gravity="center_vertical"
            android:layout_width="280dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/level_3_check_img"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/dialog_line_3"
        android:layout_below="@+id/dialog_level_3_relative_btn"
        android:background="@color/md_grey_200"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/dialog_level_4_relative_btn"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_below="@+id/dialog_line_3"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/level_4_text"
            android:background="@color/lucency"
            android:text="提前30分钟"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/md_grey_800"
            android:gravity="center_vertical"
            android:layout_width="280dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/level_4_check_img"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/dialog_line_4"
        android:layout_below="@+id/dialog_level_4_relative_btn"
        android:background="@color/md_grey_200"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/dialog_level_5_relative_btn"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_below="@+id/dialog_line_4"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/level_5_text"
            android:background="@color/lucency"
            android:text="提前1小时"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/md_grey_800"
            android:gravity="center_vertical"
            android:layout_width="280dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/level_5_check_img"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/dialog_line_5"
        android:layout_below="@+id/dialog_level_5_relative_btn"
        android:background="@color/md_grey_200"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/dialog_level_6_relative_btn"
        android:layout_marginTop="@dimen/dialog_maegin_top"
        android:layout_below="@+id/dialog_line_5"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/level_6_text"
            android:background="@color/lucency"
            android:text="提前一天"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/md_grey_800"
            android:gravity="center_vertical"
            android:layout_width="280dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/level_6_check_img"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>

    </RelativeLayout>

</RelativeLayout>
